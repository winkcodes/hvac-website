			.benefit-item:hover {
				transform: translateY(-4px);
				box-shadow: var(--shadow-lg);
			}
			
			.benefit-icon {
				width: 60px;
				height: 60px;
				background: linear-gradient(135deg, var(--primary-color), #4A90E2);
